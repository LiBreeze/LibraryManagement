<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.library">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-feature android:name="com.android.hardware" />
    <uses-feature android:name="com.android.hardware.Camera.focus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Projects"></activity>
        <activity
            android:name=".AdminRequest"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RequestBooks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchSubject"
            android:label="Search by Subject"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AdminUserWait" />
        <activity
            android:name=".AdminUser"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AdminHome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".BookDetail" />
        <activity android:name=".DocUpload" />
        <activity
            android:name=".BookReturn"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReturnBooks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".JustIssue" />
        <activity
            android:name=".RecyclerViewFiles"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecyclerViewNotes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecyclerViewUsers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UpdateAccount"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WaitingList"
            android:label="Waiting List"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".QRGenerator" />
        <activity android:name=".UserBook" />
        <activity
            android:name=".book_input"
            android:label="Add Books"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AddAccountDetails" />
        <activity
            android:name=".Scanner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Issue"
            android:label="@string/title_activity_issue"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ForgotPassword" />
        <activity android:name=".Register" />
        <activity
            android:name=".Login"
            android:label="Books"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.example.library.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="portrait"
            tools:replace="screenOrientation" />
    </application>

</manifest>