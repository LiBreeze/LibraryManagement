<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/enter"
    style="@style/AppTheme.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lbl_name"

    android:fitsSystemWindows="true"
    tools:context=".book_input">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#9FC2F1"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:visibility="visible"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mainback">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginStart="175dp"
                android:layout_marginTop="50dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="375dp"
                android:descendantFocusability="beforeDescendants"
                app:cardBackgroundColor="?attr/colorControlHighlight"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextSubject"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/zxing_transparent"
                        android:ems="10"
                        android:hint="Subject"
                        android:inputType="text"
                        android:textColor="@color/zxing_status_text"
                        android:textColorHighlight="@color/zxing_status_text"
                        android:textColorHint="@color/zxing_status_text"
                        android:textColorLink="@color/zxing_status_text" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="300dp"
                android:descendantFocusability="beforeDescendants"
                app:cardBackgroundColor="?attr/colorControlHighlight"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextRack"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/zxing_transparent"
                        android:ems="10"
                        android:hint="Rack Number"
                        android:inputType="number"
                        android:textColor="@color/zxing_status_text"
                        android:textColorHighlight="@color/zxing_status_text"
                        android:textColorHint="@color/zxing_status_text"
                        android:textColorLink="@color/zxing_status_text" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="150dp"
                android:descendantFocusability="beforeDescendants"
                app:cardBackgroundColor="?attr/colorControlHighlight"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/namebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/zxing_transparent"
                        android:hint="Name"
                        android:singleLine="false"
                        android:textColorHint="@color/zxing_status_text"
                        android:textColorLink="@color/zxing_status_text" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="225dp"
                android:descendantFocusability="beforeDescendants"
                app:cardBackgroundColor="?attr/colorControlHighlight"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/bookauthor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/zxing_transparent"
                        android:hint="Author"
                        android:inputType="textPersonName"
                        android:textColor="@color/zxing_status_text"
                        android:textColorHighlight="@color/zxing_status_text"
                        android:textColorHint="@color/zxing_status_text"
                        android:textColorLink="@color/zxing_status_text" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="358dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="450dp"
                android:descendantFocusability="beforeDescendants"
                app:cardBackgroundColor="?attr/colorControlHighlight"
                app:cardCornerRadius="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/editTextquan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="@color/zxing_transparent"
                        android:ems="10"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:textColor="@color/zxing_status_text"
                        android:textColorHighlight="@color/zxing_status_text"
                        android:textColorHint="@color/zxing_status_text"
                        android:textColorLink="@color/zxing_status_text" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/create"
                android:layout_width="96dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="155dp"
                android:layout_marginBottom="90dp"
                android:background="?attr/colorControlHighlight"
                android:text="CREATE"
                android:textColor="@color/zxing_status_text" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/draw_menu2" />
</android.support.v4.widget.DrawerLayout>


