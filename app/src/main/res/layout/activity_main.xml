<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/mainback">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:background="@color/zxing_transparent">
        <!--android:background="@drawable/gradient2"-->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/icon_try" />

        <TextView
            android:id="@+id/appslogan"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="88dp"
            android:text="Your LIBRARY is Your PORTRAIT"
            android:textAlignment="center"
            android:textColor="#D5D5D5"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/editTextEmail"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="  Enter your email address"
            android:inputType="textPersonName"
            android:textColorHint="#ffffff"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_action_email"
            android:paddingLeft="10dp"/>



        <EditText
            android:id="@+id/editTextPassword"
            android:background="@drawable/input_design"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="  Enter your password"
            android:textColor="@color/white"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:drawableLeft="@drawable/ic_action_lock"
            android:paddingLeft="10dp"/>


        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textColor="#D5D5D5"/>

        <TextView
            android:id="@+id/textViewSignup"

            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:layout_marginBottom="5dp"
            android:background="?attr/colorControlHighlight"
            android:padding="10dp"
            android:text="Haven't Registered? Sign up Now"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="15dp"
            android:background="?attr/colorControlHighlight"
            android:padding="10dp"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="Login"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <!--<TextView-->
        <!--android:id="@+id/textViewAdmin"-->

        <!--android:layout_marginStart="15dp"-->
        <!--android:text="Admin?"-->
        <!--android:layout_width="350dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_margin="30dp"-->
        <!--android:layout_marginBottom="5dp"-->
        <!--android:background="@drawable/input_design"-->
        <!--android:padding="10dp"-->
        <!--android:textAlignment="center"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="20sp"-->
        <!--android:textStyle="bold" />-->

    </LinearLayout>

</RelativeLayout>
